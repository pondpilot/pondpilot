{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "default",
  "description": "Default permissions for the PondPilot application",
  "windows": ["main", "secrets"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:window:allow-close",
    "core:window:allow-set-focus",
    "core:window:allow-show",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default"
  ]
}