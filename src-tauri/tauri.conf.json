{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PondPilot",
  "version": "0.1.0",
  "identifier": "io.pondpilot.desktop",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PondPilot",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 12,
          "y": 18
        },
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' customprotocol: asset: https://asset.localhost blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self'; img-src 'self' asset: https://asset.localhost protocol: https://tauri.localhost https://asset.localhost blob: data: 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/**", "$APP/**", "**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Ameba Labs, LLC (X93LWC49WV)",
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist",
      "hardenedRuntime": true
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
